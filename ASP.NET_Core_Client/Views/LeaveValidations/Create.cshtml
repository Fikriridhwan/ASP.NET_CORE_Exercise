@model ASP.NET_Core_Client.Models.LeaveValidation

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>LeaveValidation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ManagerId" class="control-label"></label>
                <select asp-for="ManagerId" class="form-control" asp-items="ViewBag.managersId">
                    <option value="">Select Manager</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="LeaveApplicationId" class="control-label"></label>
                <select asp-for="LeaveApplicationId" class="form-control" asp-items="ViewBag.LeaveAppId">
                    <option value="">Select Manager</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Action" class="control-label"></label>
                <select asp-for="Action" class="form-control">
                    <option value="">Select Manager</option>
                    <option>Approved</option>
                    <option>Reject</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="ValidDuration" class="control-label"></label>
                <input asp-for="ValidDuration" class="form-control" />
                <span asp-validation-for="ValidDuration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
